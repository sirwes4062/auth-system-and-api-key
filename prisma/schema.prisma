datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @default(uuid())
  fullName   String
  email      String   @unique
  password   String
  apiKeys    ApiKey[]
  createdAt  DateTime @default(now())
}

model ApiKey {
  id          String   @id @default(uuid())
  key         String   @unique
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  serviceName String
  revoked     Boolean  @default(false)
  expiresAt   DateTime
  createdAt   DateTime @default(now())
}